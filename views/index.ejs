              <!-- Charts -->
              <div class="row mt-4">
                <!-- Usage Types Chart -->
                <div class="col-lg-6">
                  <div class="au-card chart-percent-card">
                    <div class="au-card-inner">
                      <h3 class="title-2 tm-b-5">Usage Types</h3>
                      <div class="btn-group mt-3">
                        <button
                          data-chart="platform"
                          type="button"
                          class="btn btn-outline-secondary btn-sm active btn-toggle filter-usagetype"
                        >
                          Platform
                        </button>
                        <button
                          data-chart="pc"
                          type="button"
                          class="btn btn-outline-secondary btn-sm btn-toggle filter-usagetype"
                        >
                          OS(PC)
                        </button>
                        <button
                          data-chart="mobile"
                          type="button"
                          class="btn btn-outline-secondary btn-sm btn-toggle filter-usagetype"
                        >
                          OS(Mobile)
                        </button>
                      </div>
                      <div class="row no-gutters">
                        <div class="col">
                          <div class="percent-chart">
                            <canvas id="usage-type"></canvas>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Users by Country Chart -->
                <div class="col-lg-6">
                  <div class="au-card chart-percent-card">
                    <div class="au-card-inner">
                      <h3 class="title-2 tm-b-5">Users by Countries</h3>
                      <div class="btn-group mt-3">
                        <button
                          data-chart="all"
                          type="button"
                          class="btn btn-outline-secondary btn-sm active btn-toggle filter-usersbycountries"
                        >
                          All
                        </button>
                        <button
                          data-chart="active"
                          type="button"
                          class="btn btn-outline-secondary btn-sm btn-toggle filter-usersbycountries"
                        >
                          Active
                        </button>
                      </div>
                      <div class="row no-gutters">
                        <div class="col">
                          <div class="percent-chart">
                            <canvas id="users-by-country"></canvas>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

